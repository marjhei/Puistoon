@model LoginModel
@{
    ViewData["Title"] = "Login";
}
    <h2>Kirjaudu</h2><div class="row">
    <div class="col-xs-8 col-xs-offset-2">

        
        <form asp-action="Login" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="KäyttäjäTunnus" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="KäyttäjäTunnus" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Salasana" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Salasana" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Lähetä</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>