@model RegisterModel 
@{
    ViewData["Title"] = "Rekisteröidy";
}
<h2>Rekisteröidy</h2><div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    
        <form asp-action="Register" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="KäyttäjäTunnus" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="KäyttäjäTunnus" class="form-control" />
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Salasana" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Salasana" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ToistaSalasana" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ToistaSalasana" class="form-control" />
                </div>
               <div>
                   <font size="2" color="green">&nbsp;&nbsp;&nbsp;Salasanan tulee sisältää isoja sekä pieniä kirjaimia, numeroita ja erikoismerkkejä</font>
               </div>
               
            </div>
            <button type="submit" class="btn btn-primary">Lähetä</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>
